<div class="jumbotron">
  <h1 class="display-3 text-center">MVC Burgers</h1>
  <p class="lead text-center">A virtual burger joint for creating and devouring delicious burgers.</p>
  <hr class="my-2">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers to Devour!</h2>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h3>Add a Burger</h3>
  <form id="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>